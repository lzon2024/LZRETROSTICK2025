<theme>
     <formatVersion>7</formatVersion>
     <view name=" detailed, grid, system">
          <video name="default_background" extra="static">
               <pos>0 0</pos>
               <size>1 1</size>
               <opacity>0</opacity>
               <storyboard>
                    <animation property="opacity" from="0" to="0.4" begin="1000" duration="8000" mode="easeInOut" autoreverse="true" repeat="forever" />
               </storyboard>
               <zIndex>47</zIndex>
          </video>

          <video name="default_background" extra="static" ifSubset="colorset:blue">
               <path>${themePath}/_theme_options/colorsets/blue/background-psx-blue.mp4</path>
          </video>

          <video name="default_background" extra="static" ifSubset="colorset:black">
               <path>${themePath}/_theme_options/colorsets/black/background-psx-black.mp4</path>
          </video>

     </view>

     <view name="system">
          <video name="default_background" extra="static" ifSubset="video-system:background-option">
               <visible>false</visible>
          </video>

     </view>
</theme>